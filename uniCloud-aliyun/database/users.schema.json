{
  "bsonType": "object",
  "required": ["username", "password"],
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "username": {
      "bsonType": "string",
      "description": "用户名，唯一",
      "trim": "both",
      "minLength": 3,
      "maxLength": 20,
      "errorMessage": {
        "required": "用户名不能为空",
        "minLength": "用户名长度不能小于 {minLength} 个字符",
        "maxLength": "用户名长度不能超过 {maxLength} 个字符"
      }
    },
    "password": {
      "bsonType": "string",
      "description": "密码，sha256加密存储",
      "minLength": 6,
      "maxLength": 100,
      "errorMessage": {
        "required": "密码不能为空",
        "minLength": "密码长度不能小于 {minLength} 个字符"
      }
    },
    "nickname": {
      "bsonType": "string",
      "description": "用户昵称",
      "trim": "both",
      "minLength": 1,
      "maxLength": 20,
      "errorMessage": {
        "required": "昵称不能为空",
        "minLength": "昵称长度不能小于 {minLength} 个字符",
        "maxLength": "昵称长度不能超过 {maxLength} 个字符"
      }
    },
    "avatar": {
      "bsonType": "string",
      "description": "头像URL",
      "trim": "both",
      "format": "url",
      "errorMessage": "头像URL格式不正确"
    },
    "gender": {
      "bsonType": "int",
      "description": "性别：0-未知 1-男 2-女",
      "minimum": 0,
      "maximum": 2,
      "errorMessage": "性别格式不正确"
    },
    "bio": {
      "bsonType": "string",
      "description": "个人简介",
      "maxLength": 200,
      "errorMessage": "个人简介不能超过 {maxLength} 个字符"
    },
    "createTime": {
      "bsonType": "timestamp",
      "description": "创建时间"
    },
    "updateTime": {
      "bsonType": "timestamp",
      "description": "更新时间"
    },
    "lastLoginTime": {
      "bsonType": "timestamp",
      "description": "最后登录时间"
    }
  },
  "additionalProperties": false
}
