<view class="create-activity-container"><view class="form-item"><text class="label">活动名称</text><input class="input" placeholder="请输入活动名称" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['form']]]]]}}" value="{{form.name}}" bindinput="__e"/></view><view class="form-item"><text class="label">活动类型</text><view class="type-list"><block wx:for="{{typeOptions}}" wx:for-item="t" wx:for-index="__i0__" wx:key="*this"><view data-event-opts="{{[['tap',[['onTypeSelect',['$0'],[[['typeOptions','',__i0__]]]]]]]}}" class="{{['type-item',(form.type===t)?'active':'']}}" bindtap="__e">{{''+t+''}}</view></block></view></view><view class="form-item"><text class="label">活动地点</text><picker mode="selector" range="{{districts}}" value="{{districtIndex}}" data-event-opts="{{[['change',[['onDistrictChange',['$event']]]]]}}" bindchange="__e"><view class="picker">{{districtIndex>=0?districts[districtIndex]:'请选择区'}}</view></picker><view style="height:16rpx;"></view><input class="input" placeholder="请输入更详细地址（门牌号等）" data-event-opts="{{[['input',[['__set_model',['','detailAddress','$event',[]]]]]]}}" value="{{detailAddress}}" bindinput="__e"/><block wx:if="{{districtIndex>=0}}"><view style="margin-top:12rpx;color:#666;font-size:24rpx;">{{'预览：广东省广州市'+districts[districtIndex]+(detailAddress?' '+detailAddress:'')+''}}</view></block></view><view class="form-item"><text class="label">活动日期</text><picker mode="date" start="{{minDate}}" data-event-opts="{{[['change',[['onDateChange',['$event']]]]]}}" bindchange="__e"><view class="picker">{{form.date||'请选择日期'}}</view></picker></view><view class="form-item"><text class="label">活动开始时间</text><picker mode="multiSelector" range="{{[hours,['：'],minutes]}}" value="{{startPickerIndex}}" data-event-opts="{{[['change',[['onStartMultiChange',['$event']]]],['columnchange',[['onStartMultiColumnChange',['$event']]]]]}}" bindchange="__e" bindcolumnchange="__e"><view class="picker">{{form.timeSlot||'请选择开始时间'}}</view></picker></view><view class="form-item"><text class="label">活动结束时间</text><picker mode="multiSelector" range="{{[endHours,['：'],endMinutes]}}" value="{{endPickerIndex}}" data-event-opts="{{[['change',[['onEndMultiChange',['$event']]]],['columnchange',[['onEndMultiColumnChange',['$event']]]]]}}" bindchange="__e" bindcolumnchange="__e"><view class="picker">{{form.endtime||'请选择结束时间'}}</view></picker></view><view class="form-item"><text class="label">联系方式</text><input class="input" placeholder="请输入手机号" type="number" maxlength="11" data-event-opts="{{[['input',[['__set_model',['$0','contact','$event',[]],['form']]]]]}}" value="{{form.contact}}" bindinput="__e"/></view><view class="form-item"><text class="label">活动人数</text><picker class="picker" range="{{peopleOptions}}" value="{{peopleIndex}}" data-event-opts="{{[['change',[['onPeopleChange',['$event']]]]]}}" bindchange="__e"><view class="picker-text">{{''+(form.totalPeople?form.totalPeople+'人':'请选择活动人数')+''}}</view></picker></view><view class="form-item"><text class="label">详细说明</text><textarea class="textarea" placeholder="请输入详细说明" data-event-opts="{{[['input',[['__set_model',['$0','description','$event',[]],['form']]]]]}}" value="{{form.description}}" bindinput="__e"></textarea></view><button data-event-opts="{{[['tap',[['onSubmitTap',['$event']]]]]}}" class="{{['submit-button',isFormValid?'enabled':'disabled']}}" bindtap="__e">提交</button><view class="tabbar-spacer"></view></view>